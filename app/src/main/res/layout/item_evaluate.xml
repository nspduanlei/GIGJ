<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_com">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_evaluate_1"/>

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_image"
            android:text="订单号：12223232323233"
            android:textColor="@color/commonColor"
            android:textSize="@dimen/tip_font_size"/>

        <TextView
            android:id="@+id/tv_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_order_id"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_image"
            android:text="货主姓名：张三      手机号：12356569693"
            android:textColor="@color/commonColor"
            android:textSize="@dimen/tip_font_size"/>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_user_info"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_image"
            android:background="@color/lineColor"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_image"
            android:ellipsize="end"
            android:lines="2"
            android:text="发噶噶噶发送发发啦发开发发掘发掘佛啊司法哦时间奥ID份骄傲发骄傲发啊即佛爱抚骄傲放假哦放假放假"
            android:textColor="@color/titleColor"
            android:textSize="@dimen/tip_font_size"/>


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_image"
            android:text="2016-10-23"
            android:textColor="@color/commonColor"
            android:textSize="@dimen/tip_font_size"/>
    </RelativeLayout>

    <include
        layout="@layout/layout_line"/>

</LinearLayout>