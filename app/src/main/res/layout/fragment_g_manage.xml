<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
              android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_h"
        android:layout_gravity="center_horizontal"
        tl:tl_indicator_color="@color/colorMain"
        tl:tl_indicator_height="1dp"
        tl:tl_tab_padding="10dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textAllCaps="true"
        tl:tl_textSelectColor="@color/titleColor"
        tl:tl_textUnselectColor="@color/titleColor"/>
    <include
        layout="@layout/layout_line"/>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>