<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/pageBgColor">

    <include
        layout="@layout/top_bar_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_bar_height"
        android:orientation="vertical"
        android:padding="@dimen/common_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您有什么问题或建议想对我们说？"
            android:textColor="@color/colorMain"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_h"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_frame_bg_2"
            android:hint="您的主题"
            android:paddingLeft="10dp"
            android:textColor="@color/titleColor"
            android:textColorHint="@color/commonColor"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_frame_bg_2"
            android:gravity="top"
            android:hint="您的宝贵意见，就是我们进步的源泉"
            android:lines="8"
            android:padding="10dp"
            android:textColor="@color/titleColor"
            android:textColorHint="@color/commonColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="请详细描述您遇到的问题，有助于我们快速定位并解决问题，或留下您的宝贵建议和意见，我们会认真进行评估！"
            android:textColor="@color/titleColor"
            android:textSize="14sp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_h"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape_bg"
            android:text="问题提交"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

    <include
        layout="@layout/loading_layout"/>


</FrameLayout>